{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block stylesheets %}
	<style>
	body {
		padding-top: 20px;
		display: block;
	}
	a {
		font-size: 15px;
	}
	.container-main {
		border: 1px solid #00CCFF;
		padding-left: 5%;
		padding-right: 5%;
		padding-bottom: 20px;
		width: 50%;
		float:left;
	}
	.container-side {
		border: 1px solid #00CCFF;
		padding-left: 5%;
		padding-right: 5%;
		padding-bottom: 20px;
		width:20%;
		float:right;
	}

	.wrapper.content {
		border: 1px solid #00CCFF;
		padding-top: 50px;
		padding-left: 5%;
		padding-right: 5%;
		padding-bottom: 20px;
	}

	.post {
		border: 1px solid #00CCFF;
		padding: 10px;
	}

	.post.title {
		border: none;
	}
	.post.content {
		border: none;
	}
	.post.link {
		border: none;
	}
	</style>
{% endblock %}

{% block body %}
<div class="container-main">
	<h1>Blog</h1>
	<div class="wrapper content">
		<div>
			<a class="post link new" href="{{ path('app_blog_post_new') }}">Create new post</a>
		</div>
		{% for item in posts %}
		<br>
		<div class="post">
			<a class="post title">{{ item["title"] }}</a>
			<p class="post content">{{ item["content"] }}<br><a href="{{ path('app_blog_post_show', {'num' : item['id']}) }}">read &#62;&#62;</a></p>
		</div>
		{% endfor %}
	</div>
</div>
<div class="container-side">
	<h3>Hello, {{ user_username }}</h3>
	<a href="{{ path('app_logout') }}">Logout</a>
</div>
{% endblock %}