{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block stylesheets %}
	<style>
	body {
		padding-top: 20px;
	}
	a {
		font-size: 15px;
	}

	.container.main {
		padding-left: 10%;
		padding-right: 10%;
	}

	.wrapper.content {
		padding-top: 50px;
		padding-left: 10%;
		padding-right: 10%;
	}

	.post {
		
	}
	</style>
{% endblock %}

{% block body %}
<div class="container main">
	<h1>blog</h1>
	<div class="wrapper content">
	<div>
		<a class="post link new" href="{{ path('app_blog_post_new') }}">Create new post</a>
	</div>
	{% for item in posts %}
	<br>
	<div class="post">
		<a class="post title">{{ item["title"] }}</a>
		<p class="post content">{{ item["content"] }}<br><a href="{{ path('app_blog_post_show', {'num' : item['id']}) }}">read &#62;&#62;</a></p>
	</div>
	</div>
</div>
	{% endfor %}
{% endblock %}