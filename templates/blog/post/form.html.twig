{% extends 'base.html.twig' %}
{% block stylesheets %}
<style>
.newpost {
	background-color: #FFFFFF;
	border: 2px solid #666666;
	border-radius: 3px;
	padding: 1em;
}
textarea.form-control {
	width: 98.45%;
	height: 12.5em;
	resize: none;
}

button.text-formatting {
	width: 29px;
	height: 25px;
	padding: 3px;
	font-size: 1.05em;
	font-family: "Times New Roman", Times, serif;
}

button.text-formatting.strong {
	font-weight: bold;
}

button.text-formatting.italic {
	font-style: italic;
	padding-right: 6px;
}

button.text-formatting.underline {
	text-decoration: underline;
}

button.text-formatting.strikethrough {
	text-decoration: line-through;
}
</style>
{% endblock %}
{% block javascripts %}
<script src="/js/post/postFormatting.js"></script>
<script>
$(document).ready(function(){ autosize($('textarea.form-control')); });
</script>
{% endblock %}
{% block content %}
	{% if errors %}
		{% for error in errors %}
			<div class="error">{{ error.message }}</div><br>
		{% endfor %}
	{% endif %}
	{{ form_start(form, {'attr' : {'class' : 'newpost'}}) }}
	<span>Title:</span>
	{{ form_widget(form.title, {'attr' : {'class' : 'form-control'}}) }}<br>
	{{ form_widget(form.content, {'attr' : {'class' : 'form-control'}}) }}<br>
	{{ form_widget(form.save) }}<br>
	{{ form_end(form) }}
{% endblock %}