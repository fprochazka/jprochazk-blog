# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{php,twig,yaml}]
charset = utf-8
indent_style = space
indent_size = 4

[{composer.json}]
charset = utf-8
indent_style = space
indent_size = 4

[*.neon]
charset = utf-8
indent_style = tab

[{package.json,docker-compose.yml,.travis.yml}]
indent_style = space
indent_size = 2
